@using NewPizzaTask.DataModels;
@{
    ViewBag.Title = "CheckoutDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Session["cart"] == null)
{
    <div class="alert alert-danger">
        <strong>No product added to cart!</strong>
    </div>

}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price EUR</th>
                <th>Quantity</th>
                <th>Total Pice EUR</th>

            </tr>
        </thead>
        <tbody>
            @{
                int Total = 0;
                int Del = 20;
            }
            @foreach (CartItem item in (List<CartItem>)Session["cart"])
            {
                int lineTotal = Convert.ToInt32(item.Quantity * item.Product.PriceEUR);
                Total = Convert.ToInt32(@Total + lineTotal);

                Session["SesTotal"] = Total;

                <tr>
                    <td>@item.Product.ProductName</td>
                    <td>@item.Product.PriceEUR</td>
                    <td>@item.Quantity</td>
                    <td>@lineTotal</td>
                </tr>
            }

        <tr>
            <td colspan="4" class="text-right"><b>Order Total: @Total </b></td>
            <td colspan="4" class="text-right"><b>Delivery Fee: @Del</b></td>
            <td colspan="4" class="text-right"><b>Checkout Total: @Total + @Del </b></td>

        </tr>
        </tbody>
    </table>
    <a href="@Url.Action("Index", "Home")" class="btn btn-success">Back to Index</a>
}

